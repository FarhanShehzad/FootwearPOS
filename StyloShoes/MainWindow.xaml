<Window x:Class="StyloShoes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StyloShoes"
        mc:Ignorable="d"
        Title="Login - Stylo POS" Height="240" Width="525">
    <Canvas>
        <Label FontWeight="Bold" FontSize="30" Canvas.Left="13" Canvas.Top="3">
            Welcome to the Stylo POS System
        </Label>
        <Label Canvas.Left="185" Canvas.Top="49" FontSize="18">Login to Proceed...</Label>
        <Label Canvas.Left="64" Canvas.Top="88" FontSize="15" FontWeight="Bold">Username:</Label>
        <Label Canvas.Left="64" Canvas.Top="118" FontSize="15" FontWeight="Bold">Password:</Label>
        <TextBox FontSize="15" Name="id" Canvas.Left="152" Canvas.Top="87" Width="292" Height="24"></TextBox>
        <PasswordBox   FontSize="15"  Name="pass" Canvas.Left="152" Canvas.Top="120" Width="292" Height="24"></PasswordBox>
        <Button FontSize="15" Name="login" Click="login_Click" Canvas.Left="351" Canvas.Top="155" Width="83" Height="26">Login</Button>
        <Label Name="ErrorMessage" FontSize="12" Canvas.Left="106" Canvas.Top="155" Foreground="Red" Visibility="Hidden">INCORRECT ID or Password!</Label>
    </Canvas>
</Window>
